<?xml version="1.0" encoding="UTF-8"?>

<component name="HomeScene" extends="Scene">
  <interface>
    <field id="contentId" type="string"/>
    <field id="mediaType" type="string"/>
  </interface>
    <script type="text/brightscript" uri="pkg:/components/HomeScene.brs" />
    <!-- All nodes must be inside <children> headers -->
    <children>

    <!--
        Interactive Items are:
            Items that can export a selected-type event, such as onFocus.

        Non-Interactive Items are:
            Items such as a logo, or background objects or trim.
            They have no focus events at all, so they are mainly theme objects and (if you really wanted to) you could remove them with some effort and keep the app's core functionality intact.
            Of course, this means no errors on a failed search, no labels on things, etc, but it would still practically act the same.
            They are still important for usability however. 
    -->
    <!--Non-Interactive Items-->
    <Rectangle
        id="background"
        color="0x09070c"
        width="1920"
        height="1080"
        translation="[0,0]" />
    <Poster
        id="loadingbackground"
        uri="pkg:/images/channel-splash-fhd.png"
        width="1920"
        height="1080"
        translation="[0,0]" 
    />
    <Label id="loadingtext" font="font:Inter-Emoji" color="#ffffff" width="1920" height="1080" translation="[0,200]" vertAlign="center" horizAlign="center" text="Loading....">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="64"/>
    </Label>
    <Rectangle
        id="headerrectangle"
        color="0x241f2a"
        width="1920"
        height="130"
        translation="[0,0]" 
        visible = "false" 
         />
    <Rectangle
        id="sidebartrim"
        color="0x241f2a"
        width="185"
        height="1000"
        translation="[60,130]" 
        visible = "false" 
         />
    <Rectangle
        id="sidebarbackground"
        color="0x0a070d"
        width="175"
        height="1000"
        translation="[65,130]" 
        visible = "false" 
         />
    <Poster
        id="odyseelogo"
        uri="pkg:/images/generic/odysee.png"
        width="156"
        height="47"
        translation="[101, 66]" 
        visible = "false"
         />
    <Label
		id="searchHistoryLabel"
        visible="false"
		font="font:Inter-Emoji"
		color="#ffffff" 
		width="500" 
		height="64" 
		text="Search History"
		translation="[1080,160]"
		>
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="64"/>
    </Label>
    
    <Label id="warningtext" font="font:Inter-Emoji" color="#ffffff" width="1920" height="80" text="Warning!" translation="[300,106]" visible="false">
			<Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="64"/>
	</Label>
	<Label id="warningsubtext" font="font:Inter-Emoji" color="#ffffff" width="1534" height="300" wrap="true" text="Your Roku may not be supported! Certain models of Roku may not meet the hardware requirements to play 1080p video. You are using one of them. Errors may occur." translation="[300,186]" visible="false">
		<Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="32"/>
	</Label>
    
    <!--Interactive Items-->

	<Button id="warningbutton" textcolor="#ffffff" minwidth="300" height="64" text="OK" showFocusFootprint="true" translation="[300,286]" visible="false"/>
    
    <Label id="oauth-header" font="font:Inter-Emoji" color="#ffffff" width="1920" height="80" text="Enter" translation="[960,500]" visible="false">
			<Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="64"/>
	</Label>

    <Label id="oauth-code" font="font:Inter-Emoji" color="#ffffff" width="1920" height="80" text="PYZK-WKYS" translation="[700,550]" visible="false">
			<Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="120"/>
	</Label>

    <Label id="oauth-footer" font="font:Inter-Emoji" color="#ffffff" width="1920" height="80" text="at https://odysee.com/$/activate" translation="[560,670]" visible="false">
			<Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="64"/>
	</Label>

    <Button id="logoutButton" textcolor="#ffffff" minwidth="80" height="64" text="Logout" showFocusFootprint="true" translation="[1500,70]" iconUri="" focusedIconUri="" visible="false"/>
    <!-- video grid -->
    <MarkupList
            id="selector"
            itemComponentName="catselector"
            itemSize="[110, 70]"
            itemSpacing="[10, 10]"
            translation="[100,133]"
            numColumns="1"
            numRows="11"
            vertFocusAnimationStyle="floatingFocus"
            focusFootprintBlendColor="#5d5d5d"
            columnWidths="[110,70]"
            visible = "false"
    />
    <Label
        id="catselectorendindicator"
        height="20"
        width="60"
        font="font:SmallestBoldSystemFont"
        text = "..."
        horizAlign = "left"
        vertAlign = "center"
        translation="[140,995]"
        visible = "false" />
    <RowList
        id= "vgrid"
        translation= "[210,120]"
        itemComponentName= "PosterItem"
        numRows= "4"
        rowitemSize="[[380,350]]"
        rowItemSpacing= "[[20,0]]"
        itemSize= "[1920,365]"
        focusXOffset = "[50]"
        showRowLabel= "[false]"
        rowFocusAnimationStyle= "floatingfocus"
        vertFocusAnimationStyle= "fixedfocus"
        visible = "false"
    />

    <MiniKeyboard
		id="searchKeyboard"
        visible="false"
		showTextEditBox = "true"
		translation="[290,160]"
		>
    	<MarkupGrid 
    	    id="searchKeyboardDialog"
    		itemComponentName="horizontalButton"
    	    itemSpacing="[0, 20]"
    		numRows="1"
    		translation="[16,710]"
    	    drawFocusFeedback="false"
            jumpToItem="true"
    	/>
	</MiniKeyboard>

	<LabelList
		id="searchHistory"
        visible="false"
		vertFocusAnimationStyle="floatingFocus"
		translation="[930,260]"
		itemSize="[700,65]"
		>
		<ContentNode id="searchHistoryContent" role="content">
		</ContentNode>
	</LabelList>
	
    <LabelList
		id="searchHistoryDialog"
        visible="false"
		itemSize="[700,65]"
		translation="[930,867]"
		>
		<ContentNode id="Dialog" role="content">
			<ContentNode title="Clear History"/>
		</ContentNode>
	</LabelList>
    
    <Video
        id = "Video"
        height = "1080"
        width = "1920"
	    loop = "false"
        visible = "false"
        enableUI = "false"
        enableTrickPlay = "false"
    />
    <!--Video Overlay, used for like/dislike (or play/pause)-->
    <Group id="videoOverlayGroup" translation="[0,850]" visible="false">
        <Rectangle id="background" color="0x00000088" width="1920" height="300" translation="[0,25]"/>
        <Label
        id="beginningProgress"
        height="20"
        width="1293"
        font="font:SmallestBoldSystemFont"
        text = "00:00"
        horizAlign = "left"
        vertAlign = "center"
        translation="[300,40]" />
        <Label
        id="endingProgress"
        height="20"
        width="1293"
        font="font:SmallestBoldSystemFont"
        text = "00:00"
        horizAlign = "right"
        vertAlign = "center"
        translation="[300,40]" />
        <Rectangle id="outline" color="0x000000FF" width="1293" height="12" translation="[300,65]"/>
        <Rectangle id="bar" color="0xFFFFFF88" width="0" height="10" translation="[302,67]" />
        <MarkupGrid 
        id="videoButtons"
        itemComponentName="horizontalButton"
        itemSpacing="[20, 20]"
        columnSpacings="[0, 200, 0, 0, 200, 0]"
        numRows="1"
        translation="[300,83]"
        drawFocusFeedback="false"
        jumpToItem="true"
        />
    </Group>

    <Rectangle id = "ChatBackground"
    width = "450"
    height = "980"
    visible="false"
    translation="[1460, 55]"
    color = "0x000000BB"/>

    <ScrollableText id = "ChatBox"
            width = "450"
            height = "980"
            visible="false"
            translation="[1460, 55]"
            font="font:Inter-Emoji"
            scrollbarTrackBitmapUri = "pkg:/images/placeholder1x1.png"
            scrollbarThumbBitmapUri = "pkg:/images/placeholder1x1.png"
            vertAlign = "bottom"
            color = "0xFFFFFFFF">
            <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="35"/>
    </ScrollableText>

    <Rectangle id = "SuperChatBackground"
    width = "1200"
    height = "125"
    visible="false"
    translation="[0, 0]"
    color = "0x000000BB"/>

    <ScrollingLabel id = "SuperChatBox"
    maxwidth = "1200"
    height = "125"
    text = ""
    visible="false"
    translation="[0, 0]"
    vertAlign="center"
    font="font:Inter-Emoji"
    color = "0xFFDD91FF"
    scrollSpeed="200">
    <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="60"/>
    </ScrollingLabel>

    <!--Fast Forward/Rewind Timer-->
    <Timer
    id="ffrwTimer"
    repeat="true"
    duration=".3"
    />
    <!--Video UI Timer-->
    <Timer
    id="videoUITimer"
    repeat="false"
    duration="5"
    />

    <!--DEV USE ONLY-->
    <Poster
        id="safezones"
        uri="pkg:/images/safezone.png"
        width="1920"
        height="1080"
        translation="[0,0]" 
        visible = "false"
    />
    </children>
</component>
