<?xml version="1.0" encoding="UTF-8"?>
<!--Resolve single Odysee Livestream (if streaming, output streams, otherwise output false)-->
<component name="resolveOdyseeLivestream" extends="Task">
    <interface>
            <!--Universal (determined) constants-->
            <field id="constants" type="assocarray"/>
            <!--channel to resolve-->
            <field id="channel" type="String"/>
            <!--Logic variables-->
            <field id="resolveattempts" type="Int"/>
            <!--Account-Specific Vars-->
            <field id="uid" type="Int"/>
            <field id="authtoken" type="String"/>
            <field id="cookies" type="roArray"/>
            <!--Universal Output-->
            <field id="output" type="assocarray"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/tasks/resolveOdyseeLivestream.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/isValid.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/network/http.brs" />
</component>
