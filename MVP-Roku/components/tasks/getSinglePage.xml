<?xml version="1.0" encoding="UTF-8"?>
<!--Parser for a single page (homepage)-->
<component name="getSinglePage" extends="Task">
    <interface>
            <!--Universal (determined) constants-->
            <field id="constants" type="assocarray"/>
            <!--Channels to get in query-->
            <field id="channels" type="roArray"/>
            <field id="rawname" type="String"/>
            <!--Channels to NOT get in query-->
            <field id="blocked" type="roArray"/>
            <!--Should we attempt to resolve livestreams? (false by default)-->
            <field id="resolveLivestreams" type="bool" value="false"/>
            <field id="sortorder" type="String" value="trending"/>
            <!--Account-Specific Vars-->
            <field id="uid" type="Int"/>
            <field id="authtoken" type="String"/>
            <field id="cookies" type="roArray"/>
            <!--Universal Output-->
            <field id="output" type="assocarray"/>
            <field id="error" type="bool"/>
            <field id="numerrors" type="int"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/tasks/getSinglePage.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/isValid.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/network/http.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/liveUtils.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/parseLib.brs" />
</component>
