<?xml version="1.0" encoding="UTF-8"?>
<!--Resolve single LBRY URL-->
<component name="watchman" extends="Task">
    <interface>
            <!--Universal (determined) constants-->
            <field id="constants" type="assocarray"/>
            <!--Input data for watchman-->
            <field id="bandwidth" type="Int"/>
            <field id="cache" type="String"/>
            <field id="player" type="String"/>
            <field id="position" type="Int"/>
            <field id="duration" type="Int"/>
            <field id="protocol" type="String"/>
            <field id="rebuf_count" type="Int"/>
            <field id="rebuf_duration" type="Int"/>
            <field id="url" type="String"/>
            <!--Account-Specific Vars-->
            <field id="uid" type="Int"/> <!--Also used for user_id-->
            <field id="authtoken" type="String"/>
            <field id="cookies" type="roArray"/>
            <!--Universal Output-->
            <field id="output" type="assocarray"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/tasks/watchman.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/isValid.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/network/http.brs" />
</component>
