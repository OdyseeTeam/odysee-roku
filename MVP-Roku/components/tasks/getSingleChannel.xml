<?xml version="1.0" encoding="UTF-8"?>
<!--Parser for a single page (homepage)-->
<component name="getSingleChannel" extends="Task">
    <interface>
            <!--Universal (determined) constants-->
            <field id="constants" type="assocarray"/>
            <!--Channel to get in query-->
            <field id="channel" type="string"/>
            <field id="channelIcon" type="string" value="pkg:/images/generic/bad_icon_requires_usage_rights.png"/>
            <!--Attempts to resolve channel livestream-->
            <field id="resolveAttempts" type="int"/>
            <!--Account-Specific Vars-->
            <field id="uid" type="Int"/>
            <field id="authtoken" type="String"/>
            <field id="cookies" type="roArray"/>
            <!--Universal Output-->
            <field id="output" type="assocarray"/>
            <!--Indicate error to HomeScene-->
            <field id="error" type="bool"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/tasks/getSingleChannel.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/isValid.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/network/http.brs" />
    <script type="text/brightscript" uri="pkg:/components/generic/utility/liveUtils.brs" />
</component>
