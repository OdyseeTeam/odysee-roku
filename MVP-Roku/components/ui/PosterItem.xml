<?xml version="1.0" encoding="utf-8" ?>

<component name="PosterItem" extends="Group">
    <interface>
        <field id="width"       type="float" onChange="updateLayout"/>
        <field id="height"      type="float" onChange="updateLayout"/>
        <field id="itemContent" type="node" onChange="itemContentChanged"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/generic/utility/isValid.brs" />
    <script type="text/brightscript" uri="pkg:/components/ui/PosterItem.brs" />
    <children>
        <!--[351,197] is our item size, poster is hardcoded to 197 but true item size will be background.-->
        <Rectangle
        id="ibackground"
        color="0x1f1f1f" />
        <Poster id="poster" loadDisplayMode="limitSize" loadWidth="320" loadHeight="180" translation="[10,10]">
        </Poster>
        <Poster id="liveIcon" uri = "pkg:/images/liveIcon.png" visible="false">
        </Poster>
        <Label id="title" font="font:Inter-Emoji" color="#ffffff" translation="[10,210]" wrap = "true" numLines = "2" lineSpacing = "3" text="title">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="24"/>
        </Label>
        <Label id="published" font="font:Inter-Emoji" color="#ffffff" translation="[10,277]" text="date">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="24"/>
        </Label>
        <!--
        <Label id="published" font="font:Inter-Emoji" color="#ffffff" translation="[10,245]" text="date">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="24"/>
        </Label>
        <Label id="lbc" font="font:Inter-Emoji" color="#ffffff" translation="[10,277]" text="lbc">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="24"/>
        </Label>
        -->
        <Label id="creator" font="font:Inter-Emoji" color="#ffffff" translation="[10,310]" text="publisher">
        <Font role="font" uri = "pkg:/components/generic/fonts/Inter-Emoji.otf" fallbackGlyph="u0020" size="24"/>
        </Label>
    </children>
</component>
